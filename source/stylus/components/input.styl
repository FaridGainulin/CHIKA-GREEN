.input
  height: 55px
  width 100%
  padding: 0 24px;
  font-family: "Manrope-Medium"
  font-weight: 500
  font-size: 15px;
  line-height: 140%
  color: #1E1E1E60
  background-color: $color-white
  // border 1px solid $color-white
  // border-radius: 100px;
  transition border-color 0.3s, box-shadow 0.3s
  &:hover
    border 1px solid $color-yellow
  &:focus
    color: $color-text-black
    caret-color: $color-text-black
    border 1px solid $color-yellow
    box-shadow: 3px 3px 20px 0px $color-yellow
    ::placeholder
      color: #1E1E1E60
  &::placeholder
    color: #1E1E1E60
  +above($breakpoints.sm)
    height: 60px
  +above($breakpoints.md)
    height: 64px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 57px 0px #fff
    background-color #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    padding: 16px 24px
    resize: none
    height: 130px
    +above($breakpoints.sm)
      height: 130px
    +above($breakpoints.md)
      height: 130px

