.about-section
  background-image: url("../images/about-section-bg.png")
  background-repeat: no-repeat;
  background-position-x: center;
  background-position-y: 150px;

  &__container
    color: $color-text-black
    padding 50px 0 0 0
    +above($breakpoints.lg)
      padding 150px 0 0 0

  &__inner
    display: flex
    flex-direction: column
    +above($breakpoints.xxl)
      flex-direction: row
      gap: 117px

  &__title,
  &__text,
  &__inner-right,
  &__name-first
    text-align: center
    +above($breakpoints.xxl)
      text-align: start

  &__text
    padding 20px 0 20px 0
    +above($breakpoints.xxl)
      padding 60px 0 100px 0

  &__image
    width 300px
    height: auto
    margin: 0 auto
    +above($breakpoints.sm)
      width 360px
    +above($breakpoints.md)
      width 560px
      height: 560px
    +above($breakpoints.xxl)
      margin 0

  &__inner-right-top
    padding-top 20px
    +above($breakpoints.xxl)
      letter-spacing: -1px;
      padding-top 0

  &__inner-right-bottom
    padding 20px 0 20px 0
    +above($breakpoints.xxl)
      letter-spacing: -1px;
      padding 140px 0 0 0

  &__name-first
    padding 20px 0 0 0
    color: $color-beige
    font-family: "Manrope-Medium"
    font-weight: 500
    +above($breakpoints.xxl)
      display: none

  &__name-second
    display: none
    +above($breakpoints.xxl)
      display: block
      color: $color-beige
      padding-top 40px
      font-family: "Manrope-Medium"
      font-weight: 500
      font-size: 124px
      line-height: 120%
      letter-spacing: -2px;


