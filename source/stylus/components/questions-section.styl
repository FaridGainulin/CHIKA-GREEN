.questions-section
  background-color $color-green

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.lg)
      padding 150px 0 150px 0

  &__inner
    display: flex
    flex-direction: column
    +above($breakpoints.lg)
      flex-direction: row
      justify-content space-between


  &__title
    text-align: center
    letter-spacing -2px
    +above($breakpoints.lg)
      text-align: start

  &__form
    padding 20px 0
    display: flex
    flex-direction: column
    gap: 10px
    margin 0 auto
    width 300px
    +above($breakpoints.sm)
      width 360px
    +above($breakpoints.lg)
      letter-spacing -1px
      margin 0
      flex-direction: row
      flex-wrap: wrap
      width 560px
      padding 0
      gap: 20px

  &__image
    display: none
    +above($breakpoints.lg)
      display: block
      position: absolute
      bottom: 0
      left: 0

.items-questions
  +above($breakpoints.lg)
    width 270px

