.agree-box
  font-family: "Manrope-Medium"
  font-weight: 500
  font-size: 12px
  color: #ffffff40
  display: flex
  flex-direction: row
  gap: 10px
  +above($breakpoints.md)
    font-size: 16px

  &__text
    text-align: start

.checkbox-disable
    appearance: none;
    width: 16px;
    height: 16px;
    background-color: white;
    // cursor: pointer;
    position: relative;
    outline: none;

.checkbox-active
  appearance: none;
  width: 16px;
  height: 16px;
  background-color: white;
  // cursor: pointer;
  position: relative;
  outline: none;
  &:after
    content: '';
    position: absolute;
    left: 6px;
    top: 3px;
    width: 3px;
    height: 8px;
    border: solid #768E4D
    border-width: 0 1px 1px 0;
    transform: rotate(45deg);

.agree-box__checkbox
  width 16px
