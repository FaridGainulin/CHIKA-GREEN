.steps-section
  background-image: url("../images/steps-section-section-bg.png")
  background-repeat: no-repeat;
  background-position: center

  &__container
    position relative
    color: $color-text-black
    padding 20px 0 20px 0
    +above($breakpoints.xxl)
      padding 150px 0 152px 0

  &__title
    text-align: center
    padding-bottom 20px
    +above($breakpoints.md)
      text-align: start
      padding-bottom 80px

  &__card
    display: flex
    flex-direction: column
    gap: 10px
    width 300px !important
    +above($breakpoints.sm)
      width 560px !important
    +above($breakpoints.xxl)
      flex-direction: row
      gap: 20px
      width 100% !important

  &__card-text
    width 100%
    height: 185px
    padding 20px
    background-color $color-beige
    +above($breakpoints.sm)
      padding 40px
    +above($breakpoints.xxl)
      letter-spacing: -1px
      width 560px
      height: 560px
      padding 60px
      display: flex
      flex-direction: column
      justify-content space-between

  &__number
    padding-bottom 30px
    +above($breakpoints.xxl)
      padding-bottom 0

  &__img
    width 300px
    height: auto
    +above($breakpoints.sm)
      width 560px
      height: 560px

  &__bottom
    padding-top 20px
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 20px
    text-align: center
    +above($breakpoints.md)
      text-align: start
      flex-direction: row
      justify-content space-between
    +above($breakpoints.xxl)
      padding-top 80px
  
  &__btn
    width 270px

.padding-bottom
  padding-bottom 180px