.city-section
  background-image: url("../images/city-section-bg.jpg")
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color $color-green

  &__container
    position relative
    color: $color-text-black
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 100px 0
    +above($breakpoints.md)
      padding 90px 0 300px 0
    +above($breakpoints.xxl)
      padding 150px 0 637px 0

  &__title
    color: $color-white
    +above($breakpoints.lg)
      letter-spacing -2px

  &__sub-title
    padding 20px 0
    color: $color-white
    +above($breakpoints.lg)
      letter-spacing -1px
      padding 60px 0

  &__form
    display: flex
    flex-direction: column
    gap: 10px
    margin: 0 auto
    +above($breakpoints.sm)
      width 360px
    +above($breakpoints.md)
      width 850px
      justify-content center
      flex-direction: row
      gap 20px

  &__agree
    margin: 10px auto 0;
    width: 210px;
    +above($breakpoints.md)
      margin: 20px auto 0;
      letter-spacing -1px
      width 480px

.city-section-item
  +above($breakpoints.md)
    width 270px
