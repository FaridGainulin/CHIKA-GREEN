@font-face
  font-family: "Manrope-Bold"
  src: url('../fonts/Manrope-Bold.woff'), url('../fonts/Manrope-Bold.woff2')
  font-display: swap
@font-face
  font-family: "Manrope-ExtraBold"
  src: url('../fonts/Manrope-ExtraBold.woff'), url('../fonts/Manrope-ExtraBold.woff2')
  font-display: swap
@font-face
  font-family: "Manrope-Light"
  src: url('../fonts/Manrope-Light.woff'), url('../fonts/Manrope-Light.woff2')
  font-display: swap
@font-face
  font-family: "Manrope-Medium"
  src: url('../fonts/Manrope-Medium.woff'), url('../fonts/Manrope-Medium.woff2')
  font-display: swap
@font-face
  font-family: "Manrope-Regular"
  src: url('../fonts/Manrope-Regular.woff'), url('../fonts/Manrope-Regular.woff2')
  font-display: swap
@font-face
  font-family: "Manrope-Semibold"
  src: url('../fonts/Manrope-Semibold.woff'), url('../fonts/Manrope-Semibold.woff2')
  font-display: swap

@font-face
  font-family: "Rubik-Bold"
  src: url('../fonts/Rubik-Bold.woff'), url('../fonts/Rubik-Bold.woff2')
  font-display: swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin: 0 auto
  font-size: 18px
  font-family: "Manrope-Medium"
  font-weight: 500
  line-height: 140%
  color white

.layout
  width: 100%
  height: 100%
  margin: 0 auto
  display: flex
  flex-direction: column
  overflow-x: hidden

.main
  flex: 1

.wrapper
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width: 750px
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 996px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1180px





